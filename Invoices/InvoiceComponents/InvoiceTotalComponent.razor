
@code {

    [Parameter]
    public decimal Total { get; set; }

    [Parameter]
    public decimal Subtotal { get; set; }

}

<div class="totals">
    <div class="subtotal">
        <p>Mezisoučet: @Subtotal.ToString("C")</p>
    </div>
    <div class="total">
        <h3>Součet: @Total.ToString("C")</h3>
    </div>
</div>

<style>
    .totals {
        margin-top: 20px;
        text-align: right;
    }

    .totals .subtotal,
    .totals .tax,
    .totals .total {
        font-size: 1rem;
        margin: 4px 0;
    }

    .totals .subtotal p,
    .totals .tax p {
        color: #333333;
    }

    .totals .total h3 {
        font-size: 1.2rem;
        color: #4A90E2;
    }
</style>