
@code {
    [Parameter]
    public string Number { get; set; }
    
    [Parameter]
    public DateOnly IssueDate { get; set; }
    
    [Parameter]
    public DateOnly DueDate { get; set; }
}

<div class="invoice-header">
    <h2>Faktura @Number</h2>
    <p class="labeled"><span class="label">Vystaveno:</span><span class="value">@IssueDate.ToString("d. MMMM yyyy")</span></p>
    <p class="labeled"><span class="label">Splatnost:</span><span class="value">@DueDate.ToString("d. MMMM yyyy")</span></p>
</div>

<style>
    .invoice-header {
        text-align: right;
        margin-bottom: 15px;
    }

    .invoice-header h2 {
        margin: 0;
        font-size: 1.8rem;
        color: #4A90E2;
    }

    .invoice-header p {
        margin: 0;
        font-size: 0.85rem;
    }

    .invoice-header .labeled {
        display: flex;
        justify-content: space-between;
    }

    .invoice-header .label {
        font-weight: bold;
        flex: 4.5;
    }

    .invoice-header .value {
        flex: 1;
    }
</style>