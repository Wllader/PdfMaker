@using Data.DbModel

@code {
    [Parameter] public InvoiceItem InvoiceItem { get; set; }
    [Parameter] public IEnumerable<OrderInfo> OrderInfos { get; set; }
}

<div class="list-item-div form-div">
    <div class="component-input-row">
        <label>Name:</label>
        <InputText @bind-Value="InvoiceItem.Name" class="form-control"/>
    </div>
    <div class="component-input-row">
        <label>Order:</label>
        <InputSelect @bind-Value="InvoiceItem.OrderInfoId" class="form-control">
            <option value="">Select Order</option>
            @foreach (var oi in OrderInfos) {
                <option value="@oi.Id">@oi.Number</option>
            }
        </InputSelect>
    </div>
    <div class="component-input-row">
        <label>Description:</label>
        <InputText @bind-Value="InvoiceItem.Description" class="form-control"/>
    </div>
    <div class="component-input-row">
        <label>Unit:</label>
        <InputText @bind-Value="InvoiceItem.Unit" class="form-control"/>
    </div>
    <div class="component-input-row">
        <label>Quantity:</label>
        <InputNumber @bind-Value="InvoiceItem.Quantity" class="form-control"/>
    </div>
    <div class="component-input-row">
        <label>Price Per Unit:</label>
        <InputNumber @bind-Value="InvoiceItem.PricePerUnit" class="form-control"/>
    </div>
</div>